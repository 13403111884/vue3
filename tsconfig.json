{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "react",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "node",
      "vue/types",
      "vue-router/types",
      "vuex/types"
    ],
    "typeRoots": [],
    "paths": {
      "/@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "src/router/index.ts",
    "src/store/index.ts",
    "src/main.ts",
    "src/plugins/singleSpa.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.js"
  ]
}